{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "slstress"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Pod",
            "metadata": {
                "generateName": "${RUN}-",
                "labels": {
                    "deployment": "slstress",
                    "deploymentconfig": "slstress",
                    "run": "slstress",
                    "test": "slstress"
                }
            },
            "spec": {
                "nodeSelector": {
                    "placement": "test"
                },
                "containers": [
                    {
                        "env": [
                            {
                                "name": "RUN",
				"value": "${RUN}"
                            },
                            {
                                "name": "RUN_TIME",
                                "value": "${RUN_TIME}"
                            },
                            {
                                "name": "LOGGING_DELAY",
                                "value": "${LOGGING_DELAY}"
                            },
                            {
                                "name": "LOGGING_LINE_LENGTH",
                                "value": "${LOGGING_LINE_LENGTH}"
                            },
                            {
                                "name": "STRESS_CPU",
				"value": "${STRESS_CPU}"
                            },
                            {
                                "name": "STRESS_TIME",
				"value": "${STRESS_TIME}"
                            },
                            {
                                "name": "TARGET_HOST",
				"value": "${TARGET_HOST}"
                            },
                            {
                                "name": "TARGET_PORT",
				"value": "${TARGET_PORT}"
                            },
                            {   
                                "name": "JMETER_SIZE",
                                "value": "${JMETER_SIZE}"
                            },
                            {
                                "name": "JMETER_RAMP",
				"value": "${JMETER_RAMP}"
                            },
                            {
                                "name": "JMETER_TIME",
				"value": "${JMETER_TIME}"
                            },
                            {
                                "name": "JMETER_TPS",
				"value": "${JMETER_TPS}"
                            },
                            {
                                "name": "PBENCH_DIR",
				"value": "${PBENCH_DIR}"
                            },
                            {
                                "name": "GUN",
				"value": "${GUN}"
                            }
                        ],
                        "image": "sjug/centos-stress:latest",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "slstress",
                        "resources": {},
                        "securityContext": {
                            "capabilities": {
                                "drop": [
                                    "KILL",
                                    "MKNOD",
                                    "SETGID",
                                    "SETUID",
                                    "SYS_CHROOT"
                                ]
                            },
                            "privileged": false,
                            "seLinuxOptions": {
                                "level": "s0:c9,c4"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log",
                        "volumeMounts": [
                            {
                                "mountPath": "/dev/log",
                                "name": "dev-log"
                            }
                        ]
                    }
                ],
                "restartPolicy": "Never",
                "volumes": [
                    {
                        "hostPath": {
                            "path": "/dev/log"
                        },
                        "name": "dev-log"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "RUN",
            "displayName": "Run application: stress|logger|slstress",
	    "description": "Tells the container which appplication to execute",
            "value": "slstress"
        },
        {
            "name": "RUN_TIME",
            "displayName": "Application timeout",
            "description": "Stop running application RUN_TIM seconds",
            "value": "60"
        },
        {
            "name": "LOGGING_DELAY",
            "displayName": "Logging delay",
            "description": "Delay LOGGING_DELAY microseconds before sending another log line",
            "value": "1000000"
        },
        {
            "name": "LOGGING_LINE_LENGTH",
            "displayName": "Log line length",
            "description": "Send log lines of length LOGGING_LINE_LENGTH characters",
            "value": "80"
        },
	{
	    "name": "STRESS_CPU",
	    "displayName": "STRESS CPU Threads",
	    "description": "How many stress CPU worker threads to spawn",
	    "value": "6"
	},
	{
	    "name": "STRESS_TIME",
	    "displayName": "Stress timeout",
	    "description": "The duration that stress will run before ending",
	    "value": "60"
	},
	{
	    "name": "TARGET_HOST",
	    "displayName": "JMeter IP",
	    "description": "The target IP for HTTP requests in JMeter",
	    "value": "127.0.0.1"
	},
	{
	    "name": "TARGET_PORT",
	    "displayName": "JMeter Port",
	    "description": "The target port for HTTP requests in JMeter",
	    "value": "80"
	},
        {   
            "name": "JMETER_SIZE",
            "displayName": "JMeter instance size",
            "description": "Number of hosts to stress per JMeter instance",
            "value": "3"
        },
	{
	    "name": "JMETER_RAMP",
	    "displayName": "JMeter Ramp-up Time",
	    "description": "The ramp-up period of the thread group in JMeter",
	    "value": "30"
	},
	{
	    "name": "JMETER_TIME",
	    "displayName": "JMeter run duration",
	    "description": "The target port for HTTP requests in JMeter",
	    "value": "120"
	},
	{
	    "name": "JMETER_TPS",
	    "displayName": "JMeter throughput",
	    "description": "Thread throuput rate for JMeter",
	    "value": "60"
	},
	{
	    "name": "ROUTER_IP",
	    "displayName": "Router IP",
	    "description": "The IP of the OpenShift router to direct requets through",
	    "value": "127.0.0.1"
	},
	{
	    "name": "GUN",
	    "displayName": "GUN IP Addr",
	    "description": "The IP of the machine running cluster loader",
	    "value": "127.0.0.1"
	},
	{
	    "name": "PBENCH_DIR",
	    "displayName": "PBENCH_DIR directory",
	    "description": "The IP of the machine to store Pbench results",
	    "value": "127.0.0.1"
	},
        {
            "name": "IDENTIFIER",
            "description": "Number to append to the name of resources",
            "value": "1"
        }
    ]
}
