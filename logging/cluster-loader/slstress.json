{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "slstress"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Pod",
            "metadata": {
                "generateName": "slstress-",
                "labels": {
                    "deployment": "slstress",
                    "deploymentconfig": "slstress",
                    "run": "slstress"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "MODE",
                                "value": "${MODE}"
                            },
                            {
                                "name": "LOGGING_TIMEOUT",
                                "value": "${LOGGING_TIMEOUT}"
                            },
                            {
                                "name": "LOGGING_DELAY",
                                "value": "${LOGGING_DELAY}"
                            },
                            {
                                "name": "LOGGING_LINE_LENGTH",
                                "value": "${LOGGING_LINE_LENGTH}"
                            }
                        ],
                        "image": "docker.io/jmencak/slstress:latest",
                        "command": [ "/logger.sh" ],
                        "imagePullPolicy": "Always",
                        "name": "slstress",
                        "resources": {},
                        "securityContext": {
                            "capabilities": {
                                "drop": [
                                    "KILL",
                                    "MKNOD",
                                    "SETGID",
                                    "SETUID",
                                    "SYS_CHROOT"
                                ]
                            },
                            "privileged": false,
                            "seLinuxOptions": {
                                "level": "s0:c9,c4"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log",
                        "volumeMounts": [
                            {
                                "mountPath": "/dev/log",
                                "name": "dev-log"
                            }
                        ]
                    }
                ],
                "restartPolicy": "Never",
                "volumes": [
                    {
                        "hostPath": {
                            "path": "/dev/log"
                        },
                        "name": "dev-log"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "Mode of operation: logger|slstress",
            "displayName": "Mode of operation",
            "name": "MODE",
            "value": "logger"
        },
        {
            "description": "Stop logging after LOGGING_TIMEOUT seconds",
            "displayName": "Timeout",
            "name": "LOGGING_TIMEOUT",
            "value": "60"
        },
        {
            "description": "Delay LOGGING_DELAY microseconds before sending another log line",
            "displayName": "Delay",
            "name": "LOGGING_DELAY",
            "value": "1000000"
        },
        {
            "description": "Send log lines of length LOGGING_LINE_LENGTH characters",
            "displayName": "Line length",
            "name": "LOGGING_LINE_LENGTH",
            "value": "80"
        },
        {
            "description": "Number to append to the name of resources",
            "name": "IDENTIFIER",
            "value": "1"
        }
    ]
}
