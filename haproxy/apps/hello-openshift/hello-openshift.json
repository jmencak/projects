{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "hello-openshift"
    },
    "objects": [
        {
            "kind": "ReplicationController",
            "apiVersion": "v1",
            "metadata": {
                "name": "hello-openshift-${IDENTIFIER}"
            },
            "spec": {
                "replicas": "${REPLICAS}",
                "template": {
                    "spec": {
                        "restartPolicy": "Always",
                        "nodeSelector": {
                            "placement": "apps"
                        },
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "PORT",
                                        "value": "${PORT}"
                                    },
                                    {
                                        "name": "RESPONSE",
                                        "value": "${RESPONSE}"
                                    }
                                ],
                                "image": "openshift/hello-openshift",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "hello-openshift",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                   "limits": {
                                        "cpu": "800m",
                                        "memory": "20Mi"
                                    },
                                    "requests": {
                                        "cpu": "10m",
                                        "memory": "10Mi"
                                    }
                                },
                                "securityContext": {
                                    "capabilities": {
                                        "drop": [
                                            "KILL",
                                            "MKNOD",
                                            "SETGID",
                                            "SETUID",
                                            "SYS_CHROOT"
                                        ]
                                    },
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "hello-openshift-${IDENTIFIER}"
                        }
                    }
                },
                "selector": {
                    "name": "hello-openshift-${IDENTIFIER}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "hello-route-example-${IDENTIFIER}"
            },
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "hello-openshift-${IDENTIFIER}"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "hello-openshift-${IDENTIFIER}",
                "labels": {
                    "name": "hello-openshift"
                },
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                }
            },
            "spec": {
                "selector": {
                    "name": "hello-openshift-${IDENTIFIER}"
                },
                "type": "NodePort",
                "ports": [
                    {
                        "name": "first",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "PORT",
            "displayName": "Listen on PORT",
            "description": "Tells the container to start httpd server on port PORT",
            "value": "8080"
        },
        {
            "name": "APPLICATION_DOMAIN",
            "displayName": "Application Hostname",
            "description": "The exposed hostname that will route to the hello-openshift-* service, if left blank a value will be defaulted.",
            "value": ""
        },
        {
            "name": "REPLICAS",
            "displayName": "Number of replicas",
            "description": "Start with the number of replicas.",
            "value": "1"
        },
        {   
            "name": "RESPONSE",
            "displayName": "Response to send back",
            "description": "HTTP response to send back.",
            "value": "1"
        },
        {
            "name": "IDENTIFIER",
            "description": "Number to append to the name of resources",
            "value": "1"
        }
    ]
}
