{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "hello-openshift"
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "hello-openshift-${IDENTIFIER}",
                "labels": {
                    "name": "hello-openshift"
                },
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                }
            },
            "spec": {
                "selector": {
                    "name": "hello-openshift-${IDENTIFIER}"
                },
                "ports": [
                    {
                        "name": "first",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "IDENTIFIER",
            "description": "Number to append to the name of resources",
            "value": "1"
        }
    ]
}
