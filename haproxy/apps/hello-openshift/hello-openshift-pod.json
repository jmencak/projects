{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "hello-openshift"
    },
    "objects": [
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "generateName": "hello-pod-",
                "labels": {
                    "name": "hello-openshift-${IDENTIFIER}"
                }
            },
            "spec": {
                "restartPolicy": "Always",
                "nodeSelector": {
                    "placement": "apps"
                },
                "containers": [
                    {
                        "env": [
                            {
                                "name": "PORT",
                                "value": "${PORT}"
                            },
                            {
                                "name": "RESPONSE",
                                "value": "${RESPONSE}"
                            }
                        ],
                        "image": "openshift/hello-openshift",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "hello-openshift",
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                           "limits": {
                                "cpu": "800m",
                                "memory": "20Mi"
                            },
                            "requests": {
                                "cpu": "10m",
                                "memory": "10Mi"
                            }
                        },
                        "securityContext": {
                            "capabilities": {
                                "drop": [
                                    "KILL",
                                    "MKNOD",
                                    "SETGID",
                                    "SETUID",
                                    "SYS_CHROOT"
                                ]
                            },
                            "privileged": false
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "PORT",
            "displayName": "Listen on PORT",
            "description": "Tells the container to start httpd server on port PORT",
            "value": "8080"
        },
        {   
            "name": "RESPONSE",
            "displayName": "Response to send back",
            "description": "HTTP response to send back.",
            "value": "Hello OpenShift!"
        },
        {
            "name": "IDENTIFIER",
            "description": "Number to append to the name of resources",
            "value": "1"
        }
    ]
}
