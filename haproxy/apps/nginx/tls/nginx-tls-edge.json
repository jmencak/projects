{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
        "name": "nginx"
    },
    "objects": [
        {
            "kind": "ReplicationController",
            "apiVersion": "v1",
            "metadata": {
                "name": "nginx-${IDENTIFIER}"
            },
            "spec": {
                "replicas": "${REPLICAS}",
                "template": {
                    "spec": {
                        "restartPolicy": "Always",
                        "nodeSelector": {
                            "placement": "apps"
                        },
                        "containers": [
                            {
                                "image": "docker.io/jmencak/nginx",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "nginx",
                                "ports": [
                                    {
                                        "name": "http",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "https",
                                        "containerPort": 8443,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                   "limits": {
                                        "cpu": "800m",
                                        "memory": "20Mi"
                                    },
                                    "requests": {
                                        "cpu": "10m",
                                        "memory": "10Mi"
                                    }
                                },
                                "securityContext": {
                                    "capabilities": {
                                        "drop": [
                                            "KILL",
                                            "MKNOD",
                                            "SETGID",
                                            "SETUID",
                                            "SYS_CHROOT"
                                        ]
                                    },
                                    "privileged": false
                                },
                                "terminationMessagePath": "/dev/termination-log"
                            }
                        ]
                    },
                    "metadata": {
                        "labels": {
                            "name": "nginx-${IDENTIFIER}"
                        }
                    }
                },
                "selector": {
                    "name": "nginx-${IDENTIFIER}"
                }
            }
        },
